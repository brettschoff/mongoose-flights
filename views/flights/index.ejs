<%- include('../partials/header') %>
    <h1>All flights listed here</h1>
    <Table>
        <thead>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
        </thead>
        <tbody>
            <% flights.forEach(f => { %>
                <% if (f.departs <= Date.now()) { %>
                    <tr class="past">
                <% } else { %>
                 <tr>
            <% } %>
                    <td><%= f.airline %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.flightNo %></td>
                    <td><%= f.departs %></td>
                    <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                </tr>
                <% }) %>
        </tbody>
    </Table>

    </main>
</body>
</html>